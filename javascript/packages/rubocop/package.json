{
  "name": "@herb-tools/rubocop",
  "version": "0.0.1",
  "description": "Rubocop integration for Herb",
  "type": "module",
  "license": "MIT",
  "homepage": "https://herb-tools.dev",
  "bugs": "https://github.com/marcoroth/herb/issues/new?title=Package%20%60@herb-tools/rubocop%60:%20",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcoroth/herb.git",
    "directory": "javascript/packages/rubocop"
  },
  "main": "./dist/herb-rubocop.cjs",
  "module": "./dist/herb-rubocop.esm.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "yarn clean && rollup -c && mkdir dist/assets && cp assets/json_corrector_formatter.rb dist/assets",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "test": "vitest run",
    "prepublishOnly": "yarn clean && yarn build && yarn test"
  },
  "exports": {
    "./package.json": "./package.json",
    "./assets/json_corrector_formatter.rb": "./assets/json_corrector_formatter.rb",
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/herb-rubocop.esm.js",
      "require": "./dist/herb-rubocop.cjs",
      "default": "./dist/herb-rubocop.esm.js"
    }
  },
  "dependencies": {
    "@herb-tools/core": "0.6.1"
  },
  "files": [
    "package.json",
    "README.md",
    "assets/",
    "dist/",
    "src/"
  ],
  "devDependencies": {
    "@herb-tools/node-wasm": "^0.6.1"
  }
}
